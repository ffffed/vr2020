#define healthX 0.1
#define healthY  0.1  
#define healthDimX 0.1
#define healthDimY 0.01
#define spacing    10

/* La posizione forse è giusta */
class status
{
	var number;
	
	init();
	update();
	draw(number);
};

function status::init()
{
	number = 3;
	draw(number);
}

function status::update()
{
	draw(number);
}

function status::draw(number)
{
	if (number == 3)
	{
		ConsoleColor(0.0, 1.0, 0.0, 1.0);
		ConsoleFilledRect(healthX, healthY, healthDimX, healthDimY);	
	}
}